#!/bin/sh

dwmblocks &
mpd &
xset r rate 300 50 &
xautolock -time 10 -locker slock -corners +00- -secure &
unclutter -noevents &
[ -f "$HOME/Pictures/bg" ] && xwallpaper --zoom "$HOME/Pictures/bg" &

! pidof -s pulseaudio >/dev/null 2>&1 && setsid -f pulseaudio --start --exit-idle-time=-1 >/dev/null 2>&1
