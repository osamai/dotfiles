#!/bin/sh

if [ $# -lt 2 ]; then
	printf "usage:\n\t%s files... message\n" "$0"
	exit 1
fi

for msg in "$@"; do :; done

for f in "$@"; do
	[ "$f" = "$msg" ] && continue

	[ "$files" ] && files="$files $f" || files="$f"

	n="$f"
	case "$n" in .*) n=$(echo "$n" | cut -c 2-) ;; esac

	n=$(echo "$n" | cut -d '.' -f 1 | sed 's:/*$::')
	case "$n" in
		pkg/* | internal/*) n=$(echo "$n" | cut -d '/' -f 2-) ;;
		cmd/*)
			n=$(echo "$n" | cut -d '/' -f 2-)
			[ "$(basename "$n")" = "main" ] && n=$(dirname "$n")
			;;
		migrations/*)
			bn=$(basename "$n" | cut -d '_' -f 1)
			[ "$bn" -eq "$bn" ] && n="$(dirname "$n")/$(basename "$n" | cut -d '_' -f 2-)"
			;;
	esac

	bn=$(basename "$n")
	[ "$(dirname "$n")" = "$bn" ] && n="$bn"

	[ "$names" ] && names="$names, $n" || names="$n"
done

git add $files && git commit -m "$names: $msg"
